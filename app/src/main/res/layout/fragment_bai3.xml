<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bai3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold">

        <EditText
            android:id="@+id/editTextACheckTriangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập cạnh a"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextBCheckTriangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập cạnh b"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextCCheckTriangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập cạnh c"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCheckTriangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kiểm tra"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/textViewResultCheckTriangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết quả"
            android:paddingTop="16dp"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </LinearLayout>

</FrameLayout>